{
  "builders": [{
    "type": "qemu",
    "accelerator": "kvm",
    "iso_url": "base/Fedora-Cloud-Base-27-1.6.x86_64.qcow2",
    "disk_image": true,
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "{{user `build_dir`}}",
    "vm_name": "{{user `vm_name`}}",
    "disk_size": "{{user `disk_size`}}",
    "format": "qcow2",
    "disk_compression": true,
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "root",
    "ssh_password": "muffins",
    "shutdown_command": "systemctl poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"],
      ["-cdrom", "cloud-init/fedora27-config.iso"],
      ["-display", "gtk"]
    ],
    "net_device": "virtio-net",
    "disk_interface": "virtio"
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/fedora/dnf.sh",
      "scripts/common/rvn.sh",
      "scripts/common/sshd.sh",
      "scripts/fedora/sudoers.sh",
      "scripts/fedora/sources.sh",
      "scripts/fedora/cleanup.sh",
      "scripts/common/minimize.sh"
        ]
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "4",
    "disk_size": "20000",
    "headless": "false",
    "iso_checksum": "5af84b59b9c8c132adf4989fc8f20c6a0297b1b53ce992014d934a51cccdd4c9",
    "iso_checksum_type": "sha256",
    "memory": "4096",
    "mirror": "https://mirror.deterlab.net",
    "ssh_timeout": "60m",
    "vm_name": "fedora-27",
    "build_dir": "build/fedora/27"
  }
}
