{
  "builders": [{
    "type": "qemu",
    "iso_url": "base/debian-9.4.0-amd64-netinst.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "build/debian/stretch",
    "format": "qcow2",
    "disk_compression": true,
    "vm_name": "debian-stretch",
    "disk_size": "{{user `disk_size`}}",
    "headless": "true",
    "accelerator": "kvm",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc><wait>",
      "auto ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-stretch/preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "rvn",
    "ssh_password": "rvn",
    "shutdown_command": "sudo systemctl poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"],
      ["-nographic"]
    ]
  }], 
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/debian/init.sh",
      "scripts/common/rvn.sh",
      "scripts/debian/rvn.sh",
      "scripts/debian/qemu.sh",
      "scripts/common/sshd.sh",
      "scripts/debian/cleanup.sh",
      "scripts/common/minimize.sh"
    ]
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "iso_checksum": "124d270006703f2111224dec3bf7a9d01450168be41d4834f88fdd035552b044",
    "iso_checksum_type": "sha256",
    "memory": "512",
    "mirror": "http://mirror.deterlab.net/mirrors/debian-cd",
    "ssh_timeout": "60m"
  }
}
